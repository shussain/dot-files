# The following .bashrc is a bit of a hack job. Feel free to
# change your CURRENT_CODE_PATH, delete pom function, and update
# the git commit/author information
#
# BTW  I realize I use cut way, way too much. I should really
# refactor my functions to use awk and be neater. However, they
# work for me and I am too busy learning Drupal right now to
# tweak my bashrc

alias ruby='ruby1.9.1'
alias rake='rake1.9.1'
alias irb='irb1.9.1'


alias upgrade='sudo apt-get update && sudo apt-get upgrade'
alias cal='ncal -bJM -A 1 -B 1'
#alias xterm='xterm -font -*-fixed-medium-*-normal-*-14-130-*-*-*-*-*-* -geometry 110x35'
alias shutdown='sudo shutdown -h now'


CURRENT_BABYTUX=$HOME/code/python_code/babytux
CURRENT_CODE_PATH=$HOME/dnsx-monitor/src
alias cdcode='cd $CURRENT_CODE_PATH'
alias sourcedep='. /usr/local/pythonenv/LOCALDEV/bin/activate'
alias webtest='chromium-browser &'
alias battery='acpi -b'
alias phonelist='cat ~/credil/operations/phonelist'

alias explorer='nautilus .'

function boot() {
    BOOTTIME=`who -b |cut -c34-49`
    echo Boot time: $BOOTTIME
}

# Generate random words... great for using in passwords. Maybe use pwgen instead
alias randword='wc -l /etc/dictionaries-common/words |cut -c1-5 |xargs -I numb rand -M numb |xargs -I randomnumb sed -n randomnumbp /etc/dictionaries-common/words'

alias pom='$HOME/code/python_code/pomodoro/pomodoro-notify.py &'
alias pom_b='$HOME/code/python_code/pomodoro/pomodoro-notify.py -b &'

alias dualdisplay='source $HOME/.screenlayout/dualdisplay.sh'

GIT_COMMITTER_NAME="Samir Hussain" export GIT_COMMITTER_NAME
GIT_COMMITTER_EMAIL="shussain@credil.org" export GIT_COMMITTER_EMAIL
GIT_AUTHOR_NAME="Samir Hussain" export GIT_AUTHOR_NAME
GIT_AUTHOR_EMAIL="shussain@credil.org" export GIT_AUTHOR_EMAIL

# For ldns-1.6.12
LD_LIBRARY_PATH=$HOME/ldns-1.6.12/.libs/ export LD_LIBRARY_PATH
export PYTHONPATH=$HOME/ldns-1.6.12/contrib/ldnsx
