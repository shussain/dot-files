function boot() {
    BOOTTIME=`who -b |cut -c34-49`
    echo Boot time: $BOOTTIME
}

function json_validate {
    python -c "import json; fd=open('$1'); answer = json.dumps(json.load(fd), indent=4); print(answer)"
}

grepc() {
    grep -rin --color=auto --exclude-dir={.bzr,.cvs,.git,.hg,.svn} --include=\*.{c,h,y,l} $1 .
}

# print available colors and their numbers
# Taken from https://github.com/nicknisi/dotfiles/blob/master/zsh/functions.zsh
function colours() {
    for i in {0..255}; do
        printf "\x1b[38;5;${i}m colour${i}"
        if (( $i % 5 == 0 )); then
            printf "\n"
        else
            printf "\t"
        fi
    done
}

binlist () {
    BIN_LENGTH=`ls -al /usr/bin/ | wc -l `
    BIN_VALUE=`rand -M $BIN_LENGTH`
    ls -al  /usr/bin/* | head -n $((BIN_VALUE + 1)) | tail -n 1
}

manlist () {
    MAN_LENGTH=`ls -al /usr/share/man/man2/* | wc -l `
    MAN_VALUE=`rand -M $MAN_LENGTH`
    ls -al /usr/share/man/man2/* | head -n $((MAN_VALUE + 1)) | tail -n 1
}
