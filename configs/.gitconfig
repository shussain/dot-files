[user]
	name  = Samir Hussain
	email = shussain@credil.org

[github]
	user = shussain

[branch "master"]
	remote = origin
	merge  = refs/heads/master

[alias]
	ci  = commit -v
	aiw = "!f(){ git diff -w --no-color | git apply --cached --ignore-whitespace; };f"

[color]
	ui     = auto
	diff   = auto
	status = auto
	branch = auto

[color "branch"]
	current = yellow reverse
	remote  = green
	local   = white

[color "diff"]
	meta = blue bold
	frag = magenta bold
	old  = red
	new  = green

[push]
	default = current

[pull]
	default = current

[core]
	editor = vim
	excludesfile = ~/.gitignore
	mergeoptions = --no-edit
